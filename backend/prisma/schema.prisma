datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            Int            @id @default(autoincrement())
  email         String         @unique
  password      String
  role          Role
  prescriptions Prescription[]
}

enum Role {
  APOTHEKER
  PRUEFER
}

model Prescription {
  id           Int      @id @default(autoincrement())
  patientName  String
  medication   String
  dosage       String?
  quantity     Int
  dateIssued   DateTime
  uploadedFile String?
  status       Status   @default(EINGEREICHT)
  createdById  Int
  createdBy    User     @relation(fields: [createdById], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum Status {
  EINGEREICHT
  PRUEFEN
  GUELTIG
  FEHLERHAFT
  ABGELEHNT
}
